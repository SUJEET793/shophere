<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add main item "
        android:gravity="center"/>
    <Button
        android:id="@+id/main_choose_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose file"

        android:gravity="center"/>
    <EditText
        android:id="@+id/main_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="item name"
        android:gravity="center"/>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="upload"
           android:id="@+id/main_upload"/>

    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="200dp"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/catogoris_items"
            android:gravity="center"/>
        <Button
            android:id="@+id/cat_choose_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose file"
            android:gravity="center"/>
        <EditText
            android:id="@+id/cat_edit_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="item name"
            android:gravity="center"/>
        <EditText
            android:id="@+id/cat_edit_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="add description"
            android:gravity="center"/>
        <Button
            android:id="@+id/cat_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cat_upload"/>

    </LinearLayout>


</LinearLayout>